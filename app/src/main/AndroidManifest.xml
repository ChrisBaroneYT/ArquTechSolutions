<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PERMISOS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <application
        android:name=".MyApplication"
    android:enableOnBackInvokedCallback="true"
    android:allowBackup="true"
    android:dataExtractionRules="@xml/data_extraction_rules"
    android:fullBackupContent="@xml/backup_rules"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:networkSecurityConfig="@xml/network_security_config"
    android:requestLegacyExternalStorage="true"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.MyApplicationArturoCashFaster"
    android:usesCleartextTraffic="true"
    tools:targetApi="31"
    tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">

    <!-- MAIN ACTIVITY (Pantalla de Inicio) -->
    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster"
        android:windowSoftInputMode="adjustResize|stateHidden">

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- ========== ACTIVIDADES DE LA TIENDA ========== -->

    <!-- STORE ACTIVITY (Tienda Principal) -->
    <activity
        android:name=".StoreActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster"
        android:windowSoftInputMode="adjustResize" />

    <!-- CART ACTIVITY (Carrito de Compras) -->
    <activity
        android:name=".CartActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster"
        android:windowSoftInputMode="adjustResize" />

    <!-- CHECKOUT ACTIVITY (Proceso de Pago) -->
    <activity
        android:name=".CheckoutActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster"
        android:windowSoftInputMode="adjustResize|stateVisible" />

    <!-- PAYMENT SUCCESS ACTIVITY (Confirmación de Pago) -->
    <activity
        android:name=".PaymentSuccessActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster" />

    <!-- SEARCH ACTIVITY (Búsqueda de Productos) -->
    <activity
        android:name=".SearchActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster"
        android:windowSoftInputMode="adjustResize|stateVisible" />

    <!-- ORDER HISTORY ACTIVITY (Historial de Pedidos) -->
    <activity
        android:name=".OrderHistoryActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster" />

    <!-- ORDER DETAIL ACTIVITY (Detalle de Pedido) -->
    <activity
        android:name=".OrderDetailActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster" />

    <!-- ========== ACTIVIDADES EXISTENTES ========== -->

    <!-- USER PROFILE ACTIVITY (antes DashboardActivity) -->
    <activity
        android:name=".UserProfileActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster"
        android:windowSoftInputMode="adjustResize" />

    <!-- LOGIN ACTIVITY -->
    <activity
        android:name=".LoginActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster"
        android:windowSoftInputMode="adjustResize|stateVisible" />

    <!-- REGISTER ACTIVITY -->
    <activity
        android:name=".RegisterActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster"
        android:windowSoftInputMode="adjustResize|stateVisible" />

    <!-- SERVICE DETAIL ACTIVITY -->
    <activity
        android:name=".ServiceDetailActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster"
        android:windowSoftInputMode="adjustResize" />

    <!-- SETTINGS ACTIVITY -->
    <activity
        android:name=".SettingsActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster" />

    <!-- CONTACT ACTIVITY -->
    <activity
        android:name=".ContactActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyApplicationArturoCashFaster" />

    <!-- CONFIGURACIÓN PARA GLIDE -->
    <meta-data
        android:name="com.bumptech.glide.integration.okhttp3.OkHttpGlideModule"
        android:value="GlideModule" />

    <meta-data
        android:name="android.security.net.config"
        android:resource="@xml/network_security_config" />

</application>

    </manifest>