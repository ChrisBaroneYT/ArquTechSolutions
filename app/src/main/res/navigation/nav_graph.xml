<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Pantalla principal (Inicio) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myapplicationarturocashfaster.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home">

        <!-- Acción para ir desde HomeFragment al FirstFragment -->
        <action
            android:id="@+id/action_homeFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

    <!-- Primer fragmento -->
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.myapplicationarturocashfaster.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <!-- Acción para ir de FirstFragment a SecondFragment -->
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />

        <!-- Acción para volver al HomeFragment -->
        <action
            android:id="@+id/action_FirstFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- Segundo fragmento -->
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.myapplicationarturocashfaster.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <!-- Acción para regresar al FirstFragment -->
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />

        <!-- Acción opcional para volver al HomeFragment -->
        <action
            android:id="@+id/action_SecondFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>
