<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Dashboard Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/teal_700"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:layout_marginEnd="16dp"
                android:contentDescription="User Profile"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDashboardWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back!"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDashboardUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvDashboardUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="user@email.com"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.8" />
            </LinearLayout>

            <!-- Botón de Perfil -->
            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="User Profile"
                android:tint="@color/white" />

            <!-- NUEVO: Botón de Cerrar Sesión -->
            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/logout"
                android:tint="@color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Quick Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Bookings Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tvBookingsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bookings"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- Services Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tvServicesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </LinearLayout>

        <!-- Quick Actions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnBookService"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Book Service"
                android:layout_marginEnd="8dp"
                android:background="@color/purple_500"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:drawablePadding="8dp"
                android:drawableStart="@android:drawable/ic_menu_add" />

            <Button
                android:id="@+id/btnMyBookings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Bookings"
                android:layout_marginStart="8dp"
                android:background="@color/teal_700"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:drawablePadding="8dp"
                android:drawableStart="@android:drawable/ic_menu_agenda" />

        </LinearLayout>

        <!-- Recent Activity -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Activity"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentActivityRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="8dp"
            tools:listitem="@layout/item_activity"
            android:layout_marginBottom="16dp" />

        <!-- Bottom Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:elevation="8dp"
            android:paddingVertical="8dp">

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_view"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Home"
                android:tint="#2E7D32" />

            <ImageButton
                android:id="@+id/btnServices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_search"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Services"
                android:tint="#666666" />

            <ImageButton
                android:id="@+id/btnBookings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_agenda"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Bookings"
                android:tint="#666666" />

            <ImageButton
                android:id="@+id/btnProfileNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_myplaces"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Profile"
                android:tint="#666666" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>