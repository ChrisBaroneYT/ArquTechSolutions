<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título Nuestros Servicios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:gravity="start"
            android:text="@string/our_services_title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Servicio 1: Diseño -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Imagen del Servicio Diseño -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/service_detail_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/diseno"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/desc_servicio_diseno"
                        android:background="@color/light_gray" />

                </androidx.cardview.widget.CardView>

                <!-- Información del Servicio Diseño -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Nombre del Servicio -->
                    <TextView
                        android:id="@+id/service_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/diseno"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_500"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <!-- Precio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/precio"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/service_detail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/precio_500"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_700"
                            android:background="@drawable/price_background"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <!-- Descripción -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/service_detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_servicio_diseno"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark"
                        android:lineSpacingExtra="4dp"
                        android:textAlignment="viewStart"
                        android:layout_marginBottom="16dp" />

                    <!-- Características Incluidas -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/included_features"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- Característica 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="@color/purple_500"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feature_detailed_plans"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                    <!-- Característica 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:tint="@color/purple_500"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feature_3d_renders"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                    <!-- Característica 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            android:tint="@color/purple_500"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feature_personal_advice"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Servicio 2: Planos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Imagen del Servicio Planos -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/service_planos_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/planos"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/desc_servicio_planos"
                        android:background="@color/light_gray" />

                </androidx.cardview.widget.CardView>

                <!-- Información del Servicio Planos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Nombre del Servicio -->
                    <TextView
                        android:id="@+id/service_planos_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/planos"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_500"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <!-- Precio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/precio"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/service_planos_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/precio_300"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_700"
                            android:background="@drawable/price_background"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <!-- Descripción -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/service_planos_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_servicio_planos"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark"
                        android:lineSpacingExtra="4dp"
                        android:textAlignment="viewStart"
                        android:layout_marginBottom="16dp" />

                    <!-- Características Incluidas -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/included_features"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- Característica 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="@color/purple_500"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feature_floor_plans"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                    <!-- Característica 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/ic_menu_directions"
                            android:tint="@color/purple_500"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feature_elevations"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                    <!-- Característica 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            android:tint="@color/purple_500"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feature_construction_details"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Servicio 3: Supervisión -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Imagen del Servicio Supervisión -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/service_supervision_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/supervision"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/desc_servicio_supervision"
                        android:background="@color/light_gray" />

                </androidx.cardview.widget.CardView>

                <!-- Información del Servicio Supervisión -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Nombre del Servicio -->
                    <TextView
                        android:id="@+id/service_supervision_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/supervision"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_500"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <!-- Precio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/precio"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/service_supervision_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/precio_700"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_700"
                            android:background="@drawable/price_background"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <!-- Descripción -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/service_supervision_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_servicio_supervision"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark"
                        android:lineSpacingExtra="4dp"
                        android:textAlignment="viewStart"
                        android:layout_marginBottom="16dp" />

                    <!-- Características Incluidas -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/included_features"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- Característica 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/ic_menu_compass"
                            android:tint="@color/purple_500"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feature_site_supervision"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                    <!-- Característica 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/ic_menu_report_image"
                            android:tint="@color/purple_500"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feature_progress_reports"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                    <!-- Característica 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/ic_menu_manage"
                            android:tint="@color/purple_500"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feature_quality_control"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_to_home"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:drawablePadding="8dp"
            android:drawableStart="@android:drawable/ic_menu_revert" />

    </LinearLayout>

</ScrollView>