<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ScrollView para el contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:layout_above="@+id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Dinámico (Login/Registro o Bienvenida) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/white"
                android:elevation="4dp">

                <!-- Layout para usuario NO logueado -->
                <LinearLayout
                    android:id="@+id/layoutNotLoggedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/login"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@color/gray" />

                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/registrarse"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Layout para usuario LOGUEADO -->
                <LinearLayout
                    android:id="@+id/layoutLoggedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvWelcomeUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hello_user"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp" />

                    <Button
                        android:id="@+id/btnLogoutMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/logout"
                        android:textColor="@color/teal_700"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Logo y Título - MEJORADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/purple_500">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/logo_arquitech"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arquitech"
                    android:textColor="@color/white"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soluciones_arquitectonicas"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <!-- SECCIÓN: Nuestros Servicios - MODIFICADA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableStart="@android:drawable/ic_menu_manage"
                    android:gravity="start"
                    android:text="@string/our_services"
                    android:textColor="@color/purple_500"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Servicio 1: Diseño -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/diseno"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/desc_servicio_diseno"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/diseno"
                                android:textColor="@color/purple_500"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/precio_500"
                                android:textColor="@color/teal_700"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hire"
                                android:textSize="12sp"
                                android:backgroundTint="@color/purple_500"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Servicio 2: Planos -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/planos"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/desc_servicio_planos"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/planos"
                                android:textColor="@color/purple_500"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/precio_300"
                                android:textColor="@color/teal_700"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hire"
                                android:textSize="12sp"
                                android:backgroundTint="@color/purple_500"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Servicio 3: Supervisión -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/supervision"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/desc_servicio_supervision"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/supervision"
                                android:textColor="@color/purple_500"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/precio_700"
                                android:textColor="@color/teal_700"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hire"
                                android:textSize="12sp"
                                android:backgroundTint="@color/purple_500"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Slider de Proyectos - MODIFICADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableStart="@android:drawable/ic_menu_gallery"
                    android:gravity="start"
                    android:text="@string/our_projects"
                    android:textColor="@color/purple_500"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerSlider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <LinearLayout
                    android:id="@+id/layoutDots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Nuestro Equipo - MODIFICADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableStart="@android:drawable/ic_menu_my_calendar"
                    android:gravity="start"
                    android:text="@string/our_team"
                    android:textColor="@color/purple_500"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Miembro 1: Arq. Juan -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ing_juan"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/desc_servicio_diseno"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/arq"
                                android:textColor="@color/purple_500"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/juan"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/design_specialist"
                                android:textColor="@color/gray"
                                android:textSize="12sp"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Miembro 2: Ing. María -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ing_maria"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/desc_servicio_planos"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ing"
                                android:textColor="@color/purple_500"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/maria"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/structural_engineer"
                                android:textColor="@color/gray"
                                android:textSize="12sp"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Miembro 3: Ayud. Carlos -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ayud_carlos"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/desc_servicio_supervision"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ayud"
                                android:textColor="@color/purple_500"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/carlos"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/technical_assistant"
                                android:textColor="@color/gray"
                                android:textSize="12sp"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- SECCIÓN: Tienda - Slider de Productos - MODIFICADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableStart="@android:drawable/ic_menu_save"
                    android:gravity="start"
                    android:text="@string/featured_products"
                    android:textColor="@color/purple_500"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerStore"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />

                <LinearLayout
                    android:id="@+id/layoutStoreDots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout> <!-- CIERRE del LinearLayout principal del ScrollView -->

    </ScrollView> <!-- CIERRE del ScrollView -->

    <!-- Navegación Inferior - MODIFICADA -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="16dp"
        android:paddingVertical="8dp">

        <Button
            android:id="@+id/btnNavServices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/services_nav"
            android:textSize="11sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@color/purple_500"
            android:drawableTop="@android:drawable/ic_menu_search"
            android:drawablePadding="2dp" />

        <Button
            android:id="@+id/btnNavBookings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/contact_nav"
            android:textSize="11sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@color/purple_500"
            android:drawableTop="@android:drawable/ic_menu_agenda"
            android:drawablePadding="2dp" />

        <Button
            android:id="@+id/btnNavStore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/store_nav"
            android:textSize="11sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@color/purple_500"
            android:drawableTop="@android:drawable/ic_menu_save"
            android:drawablePadding="2dp" />

        <Button
            android:id="@+id/btnNavProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/profile_nav"
            android:textSize="11sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@color/purple_500"
            android:drawableTop="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="2dp" />

        <Button
            android:id="@+id/btnNavSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_nav"
            android:textSize="11sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@color/purple_500"
            android:drawableTop="@android:drawable/ic_menu_preferences"
            android:drawablePadding="2dp" />

    </LinearLayout>

</RelativeLayout> <!-- CIERRE del RelativeLayout principal -->